<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fate"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ORDER NOW"
        android:textStyle="bold"
        android:id="@+id/btnOrder"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:onClick="displayOrderActivity"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LOCATE US"
        android:textStyle="bold"
        android:id="@+id/btnLocate"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/btnOrder"
        android:layout_centerHorizontal="true"
        android:onClick="displayLocateActivity"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textStyle="bold"
        android:id="@+id/btnContact"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/btnLocate"
        android:layout_centerHorizontal="true"
        android:onClick="displayContactActivity"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textStyle="bold"
        android:id="@+id/btnAbout"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/btnContact"
        android:layout_centerHorizontal="true"
        android:onClick="displayAboutActivity"/>
</RelativeLayout>
